{
  "expo": {
    "name": "Hatake.Social",
    "slug": "hatake-social",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hatakesocial.app",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access to scan your trading cards",
        "NSPhotoLibraryUsageDescription": "We need photo library access to import card images"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.hatakesocial.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Hatake.Social to access your camera to scan trading cards."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Hatake.Social to access your photos to import card images."
        }
      ],
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "hatake-social"
      }
    }
  }
}
